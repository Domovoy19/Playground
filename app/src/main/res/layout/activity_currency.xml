<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.testapplication.modules.currency.MoneyEditText
        android:id="@+id/moneyEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:maxLines="1"
        app:currencyCode="RUB"
        app:currencySign="₽"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showCurrencyHintIfFocused="true"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/moneyInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyEditText">

        <com.example.testapplication.modules.currency.MoneyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            app:currencyCode="RUB"
            app:currencySign="₽"
            app:showCurrencyHintIfFocused="true"/>

    </android.support.design.widget.TextInputLayout>

    <com.blackcat.currencyedittext.CurrencyEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:decimal_digits="0"
        app:layout_constraintTop_toBottomOf="@+id/moneyInputLayout"/>

</android.support.constraint.ConstraintLayout>